#!/usr/bin/env bash
# Run all tests. Stop on first test failure to avoid overlooking issues.

set -e

test_dir="$( cd -P "$( dirname "${BASH_SOURCE[0]}" )"/.. && pwd )"

general() {
    make -C "$test_dir"/external/with-qwerty
    make -C "$test_dir"/external/with-git
    make -C "$test_dir"/misc
}

cljs() {
    make -C "$test_dir"/cljs
}

python() {
    make -C "$test_dir"/python prove-python
    "$test_dir"/bin/test-make-run python
}

main() {
    if [ $# -eq 0 ]; then
        set -- general cljs python
    fi

    for test in $@; do
        $test
    done
}

main "$@"
