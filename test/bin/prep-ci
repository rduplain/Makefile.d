#!/usr/bin/env bash
# Prepare Travis CI environment, beyond what's in travis.yml.

if [ $TRAVIS_OS_NAME = 'osx' ] && ! which python3 > /dev/null 2>&1; then
    # Install Python.
    #
    # Any version is okay, as the earliest supported version is specified in
    # travis.yml with Linux.
    brew update
    brew install python3
fi
